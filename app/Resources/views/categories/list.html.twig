{% extends "layout.html.twig" %}

{% block content %}
    
        <div class="page-header">          
            <h2>{% trans %}Categorias{% endtrans %}</h2>
        </div>  
        
        <div class="page-content">
            
            <div class="icon-new"> 
               <a href="{{ path('category_create')}}">
                    {% image '@AppBundle/Resources/public/images/add.png' %}
                          <img class="icon" alt="Añadir categoría" src="{{ asset_url }}"/>
                      {% endimage %}
                </a>
           </div>
            
          
          <table class="table table-striped" id="datetable">
              <thead>
                <tr>
                  <th scope="col">{%trans%}Nombre{%endtrans%}</th>
                  <th scope="col">{%trans%}Descripcion{%endtrans%}</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                {% for category in categories %}
                <tr>

                    <td scope="row" class="col-xs-12"> {{category.name}} </td>
                    <td scope="row"> {{category.description}} </td>
                    <td>
                       <a href="{{ path('category_edit', {'categoryid': category.id})}}">
                            {% image '@AppBundle/Resources/public/images/edit.png' %}
                                <img class="icon" alt="Editar categoría" src="{{ asset_url }}"/>
                            {% endimage %}
                       </a>
                       <a href="{{ path('category_delete', {'categoryid': category.id})}}" onclick="return confirm('¿Esta seguro?')">
                           {% image '@AppBundle/Resources/public/images/delete.png' %}
                                <img class="icon" alt="Borrar categoría" src="{{ asset_url }}"/>
                            {% endimage %}
                       </a> 
                       <a href="{{ path('survey_list', {'categoryid': category.id})}}">
                             {% image '@AppBundle/Resources/public/images/goto.png' %}
                                <img class="icon" alt="Ir a encuestas" src="{{ asset_url }}"/>
                            {% endimage %}
                       </a> 
                     </td>
                </tr>
                {% endfor %}
              </tbody>
          </table>
        </div>
{% endblock %}